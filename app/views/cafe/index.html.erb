<h1>Welcome to the Cafe</h1>

<% @menu.inspect %>
<table>
    <tr>
        <th>Item</th>
        <th>Price</th>
    </tr>
    <% @menu.each do |menu_item| %>
    <tr>
        <td><%= link_to menu_item.tiem.capitalize, order_path(menu_item.tiem) %></td>
        <!-- <td><%= "$%.2f" % menu_item.price %></td> -->
    </tr>
    <% end %>       
    <button><%= link_to 'Menu Items', menu_items_path %></button>
</table>
