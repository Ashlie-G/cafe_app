<h1>Menu Items</h1>

<table>
    <tr>
        <th>Item</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Actions</th>
    </tr>
    <% @items.each do |item| %>
    <tr>
        <td><%= link_to item.tiem, menu_item_path(item)%></td>
        <td><%= '%.2f' % item.price%></td>
        <td><%= item.quality.to_i%></td>
        <td><%= link_to 'Edit', edit_menu_item_path(item.id) %></td>
    </tr>
    
    <%end%>
    <button><%= link_to 'New', new_menu_item_path %></button>
    

</table>
